<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/bg"
    android:gravity="center"
    android:orientation="vertical" >

    <!-- ads:adUnitId sets the ad unit ID, which is defined in values/strings.xml -->

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        layout="@layout/ad_layout" />

    <ImageView
        android:id="@+id/clickPhotoImage"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/app_name"
        android:onClick="openCamera"
        android:scaleType="fitCenter"
        android:src="@drawable/click_photo_background" />

    <ImageView
        android:id="@+id/pickPhotoImage"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:contentDescription="@string/app_name"
        android:onClick="openGallery"
        android:scaleType="fitCenter"
        android:src="@drawable/pick_photo_background" />

</LinearLayout>