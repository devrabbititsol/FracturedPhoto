
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/style.css" />
    <title>Fractured Photo</title>
</head>
<body>
    <div class="bg-login">
        <div class="login-area">
            <div class="logo mb-4">
                <img src="~/Content/img/logo.png" alt="Fractured Photo" />
            </div>
            <!-- Login -->
            <div id="login" class="form-area">
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" class="form-control form-control-lg" />
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control form-control-lg" />
                </div>
                <button type="submit"
                        class="btn btn-success text-uppercase btn-lg btn-block mt-4">
                    Submit
                </button>
                <div class="forgot-passord mt-4">
                    <a href="#">Forgot Password</a>
                </div>
            </div>
            <!-- Forgot password -->
            <div id="forgotPass" style="display: none;">
                <h1>Forgot Password</h1>
                <div class="form-area">
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control form-control-lg" />
                    </div>
                    <button type="submit"
                            class="btn btn-success text-uppercase btn-lg btn-block">
                        Submit
                    </button>
                    <div class="forgot-passord mt-4">
                        <a href="#">Back to Login</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</body>
</html>
